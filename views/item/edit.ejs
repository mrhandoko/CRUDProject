<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <center>
      <h1><%= title %></h1>
      <p>Welcome to <%= title %></p>
      <form action="/items/createNewProduct"/ method="post">
        <table>
          <tr>
            <td>Product Name</td>
            <td></td>
            <td><input type="text" name="product_name" value="<%= item.product_name %>" required="required"></td>
          </tr>
          <tr>
            <td>Quantity</td>
            <td></td>
            <td><input type="text" name="quantity" value="<%= item.quantity %>" required="required"></td>
          </tr>
          <tr>
            <td>Category</td>
            <td></td>
            <td><select name="category">
              <% categories.forEach(function(category){ %>
              <% if(category.id === item.CategoryId) { %>
                <option value="<%=category.id%>" selected><%=category.name%></option>
              <% } else {  %>
                <option value="<%=category.id%>"><%=category.name%></option>
              <% } %>
              <% }) %>
            </select></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td><input type="submit" name="submit" value="Submit Product"></td>
          </tr>
        </table>
      </form>
    </center>
  </body>
</html>
